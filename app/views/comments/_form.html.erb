<%= form_for([@user, @feed, @feed.comments.build]) do |f| %>
	<% if user_signed_in? %>
		<p>
			<%= f.text_area :body %>
		</p> 

		<br>

		<p>
			<%= f.submit %>
		</p>

		<% else %>

		<p>
			<%= f.label :name %> <br>
			<%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :email %> <br>
			<%= f.text_field :email %>
		</p>

		<p>
			<%= f.label :body %> <br>
			<%= f.text_area :body %>
		</p> 

		<br>

		<p>
			<%= f.submit %>
		</p>
	<% end %>
<% end %>