<!DOCTYPE html>
<html>
<head>
  <title>ReelHub</title>
  <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
	<p class="notice"> 
		<%= notice %> 
	</p>
<% elsif %>
	<p class="alert">
		<%= alert %>
	</p>
<% end %>

<%= yield %>

</body>
</html>
